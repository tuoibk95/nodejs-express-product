extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Image:
      input#title.form-control(type='text', placeholder='url' name='image' required='true' value=(undefined===product ? '' : product.title) )
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of product' name='title' required='true' value=(undefined===product ? '' : product.title) )
    div.form-group
      label(for='title') Star:
      input#title.form-control(type='text', placeholder='Star' name='star' required='true' value=(undefined===product ? '' : product.title) )
    div.form-group
      label(for='title') Vote:
      input#title.form-control(type='text', placeholder='Vote' name='vote' required='true' value=(undefined===product ? '' : product.title) )
    div.form-group
      label(for='summary') Summary:
      input#summary.form-control(type='textarea', placeholder='Summary' name='summary' value=(undefined===product ? '' : product.summary) required='true')
    div.form-group
      label(for='price') Price:
      input#isbn.form-control(type='text', placeholder='Price' name='price' value=(undefined===product ? '' : product.price) required='true')
    div.form-group
      label(for='price') InStock:
      input#isbn.form-control(type='text', placeholder='InStock' name='instock' value=(undefined===product ? '' : product.price) required='true')
    div.form-group
      label(for='genre') Genre:
      input#isbn.form-control(type='text', placeholder='genre' name='genre' value=(undefined===product ? '' : product.genre) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
